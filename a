/* Media Queries */

@media (min-width: 772px) {
    div {
        width: 45vw; /* Set div width to 45% of the viewport width */
        display: inline-block; /* Ensure divs are displayed inline */
        margin: 5px; /* Keep margins for spacing */
        box-sizing: border-box; /* Include padding and border in the element's total width and height */
    }

    div img {
        max-height: 30vh; /* Set max image height to 30% of the viewport height */
        width: auto; /* Maintain aspect ratio */
    }
}

@media (min-width: 998px) {
    div {
        width: 30vw; /* Set div width to 30% of the viewport width */
    }
}
